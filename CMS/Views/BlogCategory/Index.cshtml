@model List<BlogCategoryModel>

<div class="row well">
    <a asp-controller="BlogCategory" asp-action="Create" class="btn btn-primary">Add New </a>
</div>
<div>
    @TempData["Message"]
</div>
<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Category Name</th>
                <th scope="col">Created Date</th>
            </tr>
        </thead>
        <tbody>
            @*   @{ int index = 1; }*@
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.CategoryId</th>
                    <td>@item.Name</td>
                    <td>@item.CreatedOn</td>
                    <td>

                        <a asp-controller="BlogCategory" asp-action="edit" asp-route-CategoryId="@item.CategoryId" class="btn btn-info btn-sm">Edit</a>
                        <a asp-controller="BlogCategory" asp-action="Delete" asp-route-CategoryId="@item.CategoryId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</a>
                    </td>
                </tr>
            }


        </tbody>
    </table>

</div>
