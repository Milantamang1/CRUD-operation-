@model EmployeeModel
@{
    ViewData["Title"] = "create";
    //Layout = "";
}

     <form method="post" asp-controller="home" asp-action="create" onsubmit="return validateMyForm()"> 
      
    <div class="form-group">
        <label asp-for="id">Id</label>
        <input type="text" class="form-control" asp-for="id" value="@Model.id">
        <span asp-validation-for="id" class="text-danger"></span>
    </div>

        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input type="text" class="form-control" asp-for="Name" value="@Model.Name" id="name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address">Address</label>
            <input type="text" class="form-control" asp-for="Address" value="@Model.Address" id="Address">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input type="text" class="form-control" asp-for="Email" value="@Model.Email" id="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
           @* <select asp-for="TestId" asp-items="@ViewBag.test"></select>*@
        </div>
        <div class="form-group">
            <label asp-for="Age">Age</label>
            <input type="text" class="form-control" asp-for="Age" value="@Model.Age" id="Age">
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>

    </form>

        <script>
            function validateMyForm(e){
                e.preventDefault();
            var Name = document.getElementById("Name");
            var Address = document.getElementById("Address");
            var Email = document.getElementById("Email");
            var Age = document.getElementById("Age");
                if (Name === "" || Address === "" || Email === "" || Age === "") {
                    alert("All fields are required");
                    return;
                }
                if (!Email.contains("@@")) 
                {
                    alert("Invalid Email");
                    return;
                }
                if (!isNaN(Age))
                {
                    alert("Age should be number");
                    return;
                }
                return true;
            }
        </script>