@model EmployeeModel
@{
    ViewData["Title"] = "Edit";
}

<form method="post" asp-controller="Employee" asp-action="Edit">

    <div class="form-group">

        <label asp-for="Name">Name</label>
        
       <input type="text" class="form-control" asp-for="Name" value="@Model.Name">
        <span asp-validation-for="Name" class="text-danger"></span>
        <label asp-for="Address">Address</label>

        <input type="text" class="form-control" asp-for="Address" value="@Model.Address">
        <span asp-validation-for="Address" class="text-danger"></span>

        <label asp-for="Age">Age</label>

        <input type="text" class="form-control" asp-for="Age" value="@Model.Age">
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
